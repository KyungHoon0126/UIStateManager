<base:CustomControlModel xmlns:base="clr-namespace:UIStateManagerLibrary;assembly=UIStateManagerLibrary"
             x:Class="Example.Controls.OrderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Example.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Margin="5"
                       Text="OrderControl"
                       FontSize="30"
                       HorizontalAlignment="Center"/>
            
            <Button x:Name="btnMoveToPlace"
                    Margin="5"
                    Click="btnMoveToPlace_Click"
                    Height="50" Width="200"
                    Content="장소 선택"
                    FontSize="20"/>
        </StackPanel>
    </Grid>
</base:CustomControlModel>
